{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>Last updated</th>
            <th>#Scientists</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
            <tr>
                <td>
                    <a href="{{ url('admin_edit_genus', { 'id': genus.id }) }}">{{ genus.name }}</a>
                </td>
                <td>{{ genus.speciesCount }}</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
                <td>{{ genus.expertScientists|length }} experts</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}